{
  "name": "plasma-node",
  "version": "0.0.4-beta.1",
  "description": "PG Plasma full node",
  "bin": {
    "plasma-node": "node.js",
    "plasma-cli": "cli.js"
  },
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --recursive test/",
    "lint": "./node_modules/.bin/eslint src/ test/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "plasma"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "commander": "^2.19.0",
    "express": "^4.16.4",
    "plasma-core": "0.0.4-beta.1",
    "plasma-js-lib": "^0.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.16.0"
  }
}
